{
  "compilerOptions": {
  
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ESNext"],
    "target":"ESNext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"]
}
